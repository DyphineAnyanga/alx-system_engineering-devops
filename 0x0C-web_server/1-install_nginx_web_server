#!/usr/bin/env bash
# Install nginx and serve 'Hello World!' on port 80 without using systemctl

set -e

apt-get update -y
apt-get install nginx -y

# Overwrite default index files with plain 'Hello World!' text
echo "Hello World!" > /var/www/html/index.nginx-debian.html
echo "Hello World!" > /var/www/html/index.html

# Restart nginx without systemctl
service nginx restart || service nginx start













